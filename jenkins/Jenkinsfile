pipeline {
    agent any
    
    tools{nodejs "node"}
    
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Lint'){
            steps{
                sh 'npm install jshint'
                sh 'chmod u+x ./jenkins/scripts/jshint-script.sh'
            }
        }
        }
}
