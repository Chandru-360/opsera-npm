pipeline {
  environment {
    registry = "aabdelhay/test-app"
    registryCredential = 'dockerhub'
    dockerImage = ''
    CI='true'
  }
  agent any
  tools {nodejs "node"}
  stages {
    stage('Build') {
       steps {
         sh 'npm install'
       }
    }
    stage('Test') {
      steps {
        sh 'npm test'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Publish Image') {
      steps{
         script {
            withCredentials([zip(credentialsId: 'docker-config',
                                              variable: 'DOCKER_CONFIG')]) {
                        echo 'Pushing to Docker Hub'
                        dockerImage.push()
                    }
        }
      }
    }
  }
}
